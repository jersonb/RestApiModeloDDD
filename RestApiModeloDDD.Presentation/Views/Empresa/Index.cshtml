@{
    ViewData["Title"] = "Empresas";
}
<br />
<div class="text-right">
    <a class="btn btn-primary" asp-area="" asp-controller="Empresa" asp-action="Create">Nova empresa</a>

</div>
<br />
<table class="table">
    <thead>
        <tr>
            <th scope="col">Empresa</th>
            <th scope="col">Site</th>
            <th scope="col">Qt. Funcionários</th>
            <th scope="col" style="text-align:right">Opções</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nome</td>
                <td>@item.Site</td>
                <td>@item.QuantidadeFuncionarios</td>
                <td style="text-align:right">
                    <a class="btn btn-primary btn-sm" asp-controller="Empresa" asp-action="Edit" asp-route-id="@item.Id">
                        Editar
                    </a>
                    <a class="btn btn-danger btn-sm" asp-controller="Empresa" asp-action="Delete" asp-route-id="@item.Id">
                        Deletar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
